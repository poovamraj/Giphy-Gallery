<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/preview_image_size"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/gif_item_margin">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:id="@+id/gifHolder"/>

    <com.varunest.sparkbutton.SparkButton
        android:layout_width="@dimen/favourite_button_size"
        android:layout_height="@dimen/favourite_button_size"
        android:layout_margin="5dp"
        android:id="@+id/favourite"
        app:sparkbutton_iconSize="@dimen/favourite_button_size"
        app:sparkbutton_activeImage="@drawable/ic_heart_on"
        app:sparkbutton_inActiveImage="@drawable/ic_heart_off"
        app:layout_constraintBottom_toBottomOf="@id/gifHolder"
        app:layout_constraintRight_toRightOf="@id/gifHolder"/>

</androidx.constraintlayout.widget.ConstraintLayout>